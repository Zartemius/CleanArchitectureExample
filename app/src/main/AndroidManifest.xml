<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.darte.cleanarchitectureexample">

    <application
            android:name=".ECDApplication"
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/ic_launcher_round"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".presentation.mainscreen.MainScreenActivity">
        </activity>
        <activity android:name=".presentation.splashscreen.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name=".presentation.registrationscreen.RegistrationActivity">
        </activity>
        <activity android:name=".presentation.authenticationscreen.AuthenticationActivity">
        </activity>
    </application>

</manifest>